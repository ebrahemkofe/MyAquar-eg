<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        tools:context=".Activities.Rejester_activity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:text="Please Enter your information :-"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="#c10616"
            android:gravity="bottom"
            android:paddingLeft="13dp"
            android:paddingBottom="15dp"


            />


        <EditText

            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:hint="Full name"
            android:inputType="textPersonName"
            android:lines="1"
            android:background="@drawable/register_edit_text"
            android:paddingLeft="13dp"
            android:textColorHint="#c10616"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/register_edit_text"
            android:lines="1"
            android:paddingLeft="13dp"
            android:textColorHint="#c10616"
            />


        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:hint="Password"
            android:lines="1"
            android:inputType="textPassword"
            android:background="@drawable/register_edit_text"
            android:paddingLeft="13dp"
            android:textColorHint="#c10616"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:hint="Phone number"
            android:inputType="number"
            android:background="@drawable/register_edit_text"
            android:lines="1"
            android:paddingLeft="13dp"
            android:textColorHint="#c10616"
            />

        <EditText
            android:id="@+id/jobTitle"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:hint=" Job title (optional) "
            android:background="@drawable/register_edit_text"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="13dp"
            android:textColorHint="#c10616"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:onClick="Confirm"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:background="@drawable/confirmbutton"
            android:textColor="#fff" />

    </LinearLayout>

</ScrollView>
